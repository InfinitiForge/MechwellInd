    ViewBag.Title = "Services";
}
<link href="~/CSS/navbar.css" rel="stylesheet" />
<link href="~/CSS/index.css" rel="stylesheet" />
<link href="~/CSS/about.css" rel="stylesheet" />
<script type="text/javascript" src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
<script>
    function myFunction() {
        document.getElementById("items").addEventListener("touchstart", startTouch);
        document.getElementById("items").addEventListener("touchmove", moveTouch);
    }

    var initialX = null;
    var initialY = null;
    function startTouch(e) {
        initialX = e.touches[0].clientX;
        initialY = e.touches[0].clientY;
    };

    function moveTouch(e) {

        if (initialX === null) {
            return;
        }

        if (initialY === null) {
            return;
        }

        var currentX = e.touches[0].clientX;
        var currentY = e.touches[0].clientY;

        var diffX = initialX - currentX;
        var diffY = initialY - currentY;

        if (Math.abs(diffX) > Math.abs(diffY)) {
            if (diffX > 0) {
                $("#items").carousel("next");

            } else {
                $("#items").carousel("prev");

            }
        }

        initialX = null;
        initialY = null;

        e.preventDefault();
    };

</script>

<div class="wrapper">
    <div id="demo" class="carousel slide" data-ride="carousel" style="margin-top: 87px;">
        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <!-- The slideshow -->
        <div class="carousel-inner" id="items" ontouchmove="myFunction()">
            <div class="carousel-item active">
                <img src="~/Images/Slider/Slider1.jpg" alt="Office" />
            </div>
            <div class="carousel-item">
                <img src="~/Images/Slider/Slider2.jpg" alt="Factory" />
            </div>
            @*<div class="carousel-item">
                    <img src="~/Images/Slider/Slider3.jpeg" alt="Machine" />
                </div>*@
            <div class="carousel-item">
                <img src="~/Images/Slider/Slider4.jpg" alt="Machine" />
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
